# cilium
#   see: https://docs.cilium.io/en/stable/gettingstarted/k8s-install-default/

# cilium cli
curl -L --fail --remote-name-all https://github.com/cilium/cilium-cli/releases/download/${v_cilium_cli}/cilium-linux-${cli_arch}.tar.gz{,.sha256sum}
sha256sum --check cilium-linux-${cli_arch}.tar.gz.sha256sum
sudo tar xzvfC cilium-linux-${cli_arch}.tar.gz /usr/local/bin
rm cilium-linux-${cli_arch}.tar.gz{,.sha256sum}

# cilium
cilium install --version ${v_cilium}
